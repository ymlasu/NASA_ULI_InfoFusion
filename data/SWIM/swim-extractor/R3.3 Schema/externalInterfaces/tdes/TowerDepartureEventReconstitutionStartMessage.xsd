<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:common="urn:us:gov:dot:faa:atm:terminal:entities:v3-0:commontypes"
    xmlns:tns="urn:us:gov:dot:faa:atm:terminal:entities:v3-0:tdes:towerdepartureeventreconstartmessage"
    targetNamespace="urn:us:gov:dot:faa:atm:terminal:entities:v3-0:tdes:towerdepartureeventreconstartmessage"
    elementFormDefault="unqualified"
    attributeFormDefault="unqualified">

    <xs:import
        namespace="urn:us:gov:dot:faa:atm:terminal:entities:v3-0:commontypes"
        schemaLocation="../commontypes/CommonTypes.xsd" />

    <xs:element
        name="TowerDepartureEventReconstitutionStartMessage">
        <xs:annotation>
            <xs:documentation>
                ReconStartMessage is published by TDDS to
                signify the start of recon.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element
                    name="airportID"
                    type="common:AirportIdentifier" />
            </xs:sequence>
        </xs:complexType>
    </xs:element> 
    
    <xs:simpleType
        name="ReconstitutionStartStatus">
        <xs:restriction
            base="xs:string"> 
            <xs:enumeration value="RS">
                <xs:annotation>
                    <xs:documentation>
                            Signifies the start of recon.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration> 
        </xs:restriction>
    </xs:simpleType>
</xs:schema>