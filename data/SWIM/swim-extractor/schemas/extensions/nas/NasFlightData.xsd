   <include schemaLocation="./NasAltitude.xsd"/>
   <include schemaLocation="./NasFlightIntent.xsd"/>
   <include schemaLocation="./NasFlightPlan.xsd"/>
   <include schemaLocation="./NasTmi.xsd"/>
